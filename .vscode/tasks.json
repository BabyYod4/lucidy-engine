// See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "type": "shell",
    "presentation": {
        "reveal": "always"
    },
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "label": "combine",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug .. -G 'MinGW Makefiles' ",
            "problemMatcher": []
        },
        {
            "label": "create",
            "command": "make -j",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "linux":{
                "command": "rm -rf *"
            },
            "windows":{
                "command": "rm *"
            },
            "problemMatcher": []
        },
        {
            "label": "debugRun",
            "dependsOrder": "sequence",
            "dependsOn": [
                "combine",
                "create"
            ]
        },
        {
            "label": "normalRun",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "combine",
                "create"
            ],
            "command": "${workspaceRoot}/build/bin/exe/twom.exe",
            "presentation": {
                "reveal": "always",
                "clear": true
            }
        }
    ]
}